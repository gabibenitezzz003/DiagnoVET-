# =====================================================
# DIAGNOVET - CONFIGURACIÓN DE VARIABLES DE ENTORNO
# =====================================================

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://tu-dominio.com
NEXT_PUBLIC_APP_NAME=DiagnoVET
NEXT_PUBLIC_APP_VERSION=1.0.0

# =====================================================
# CONFIGURACIÓN DE SUPABASE
# =====================================================
# URL de tu proyecto Supabase
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co
# Clave anónima de Supabase (pública)
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu_clave_anonima_aqui
# Clave de servicio de Supabase (privada - solo backend)
SUPABASE_SERVICE_ROLE_KEY=tu_clave_servicio_aqui

# =====================================================
# CONFIGURACIÓN DE GOOGLE GEMINI AI
# =====================================================
NEXT_PUBLIC_GEMINI_API_KEY=tu_clave_gemini_aqui

# =====================================================
# CONFIGURACIÓN DE GOOGLE DRIVE
# =====================================================
GOOGLE_DRIVE_CLIENT_ID=tu_client_id_aqui
GOOGLE_DRIVE_CLIENT_SECRET=tu_client_secret_aqui
GOOGLE_DRIVE_REDIRECT_URI=https://tu-dominio.com/auth/google/callback
GOOGLE_DRIVE_ACCESS_TOKEN=tu_access_token_aqui
GOOGLE_DRIVE_REFRESH_TOKEN=tu_refresh_token_aqui
GOOGLE_DRIVE_FOLDER_ID=tu_folder_id_aqui

# =====================================================
# CONFIGURACIÓN DE GOOGLE CALENDAR
# =====================================================
GOOGLE_CALENDAR_CLIENT_ID=tu_calendar_client_id_aqui
GOOGLE_CALENDAR_CLIENT_SECRET=tu_calendar_client_secret_aqui
GOOGLE_CALENDAR_REDIRECT_URI=https://tu-dominio.com/auth/calendar/callback

# =====================================================
# CONFIGURACIÓN DE N8N WORKFLOWS
# =====================================================
NEXT_PUBLIC_N8N_CHATBOT_WEBHOOK_URL=https://tu-n8n-instance.com/webhook/chatbot
NEXT_PUBLIC_N8N_CALENDARIO_WEBHOOK_URL=https://tu-n8n-instance.com/webhook/calendario

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS (BACKEND)
# =====================================================
DATABASE_URL=postgresql://usuario:password@host:puerto/database
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_clave_anonima_aqui

# =====================================================
# CONFIGURACIÓN DE OPENAI (BACKEND)
# =====================================================
OPENAI_API_KEY=tu_clave_openai_aqui

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================
# JWT Secret para autenticación
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=tu_clave_encriptacion_aqui

# =====================================================
# CONFIGURACIÓN DE MONITOREO
# =====================================================
# Sentry para monitoreo de errores
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/proyecto
# LogRocket para monitoreo de sesiones
LOGROCKET_APP_ID=tu_logrocket_app_id

# =====================================================
# CONFIGURACIÓN DE EMAIL
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password
SMTP_FROM=noreply@tu-dominio.com

# =====================================================
# CONFIGURACIÓN DE REDIS (CACHÉ)
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=tu_redis_password

# =====================================================
# CONFIGURACIÓN DE RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# =====================================================
# CONFIGURACIÓN DE LOGGING
# =====================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =====================================================
# CONFIGURACIÓN DE CORS
# =====================================================
CORS_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
CORS_CREDENTIALS=true

# =====================================================
# CONFIGURACIÓN DE SSL/TLS
# =====================================================
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =====================================================
# CONFIGURACIÓN DE BACKUP
# =====================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=tu-backup-bucket

# =====================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =====================================================
# Webhook para notificaciones
WEBHOOK_URL=https://tu-webhook.com/notifications
# Configuración de notificaciones push
FCM_SERVER_KEY=tu_fcm_server_key
VAPID_PUBLIC_KEY=tu_vapid_public_key
VAPID_PRIVATE_KEY=tu_vapid_private_key

# =====================================================
# CONFIGURACIÓN DE DESARROLLO (NO USAR EN PRODUCCIÓN)
# =====================================================
# NODE_ENV=development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000
